<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#CD4B4E"
    android:id="@+id/game">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/square"
        android:src="@drawable/square"
        android:visibility="invisible"
        android:layout_above="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:layout_width="300dp"
        android:layout_height="30dp"
        app:backgroundPadding="4dp"
        app:backgroundRadius="9dp"
        app:backgroundColor="#ffd9d9d9"
        app:progressColor="#ff2ba4ff"
        app:progress="100"
        app:max="100"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progress_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/points"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imageView"
        android:src="@drawable/square"
        android:layout_above="@+id/logo"
        android:layout_toLeftOf="@+id/points"
        android:layout_toStartOf="@+id/points"
        android:layout_marginBottom="13dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imageView2"
        android:src="@drawable/square"
        android:layout_above="@+id/logo"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="13dp"
        android:visibility="invisible" />


    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imageView3"
        android:src="@drawable/square"
        android:layout_above="@+id/imageView2"
        android:layout_toRightOf="@+id/points"
        android:layout_toEndOf="@+id/points"
        android:layout_marginBottom="17dp"
        android:visibility="invisible" />


    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imageView4"
        android:src="@drawable/square"
        android:layout_above="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="17dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/replay"
        android:src="@drawable/replay"
        android:visibility="invisible"
        android:layout_below="@+id/square"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo" />

</RelativeLayout>